{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "es2015",
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "lib": [
            "ES2019.String", "es2018", "es2016.array.include"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
